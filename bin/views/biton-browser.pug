doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title= rawTitle || 'biton'

        style
            include style.css

        block head

    main
        block body

        #hero
            #progressBar
            h1 biton browser-client (connecting to 'test' network)
            h2 DO NOT USE - This demo does not provide any security or privacy properties
            #startBtn
                a(href='#'): button(type='button') Start biton
            #status.clearfix
                #statusLeft
                    span.show-leech #{ 'Connected to ' }
                    code#numPeers 0 peers
                    | #{ '. ' }
            #svgWrap
                div.torrent-graph
            #clientLog
                div.log

    script(src='/bundle.js')
